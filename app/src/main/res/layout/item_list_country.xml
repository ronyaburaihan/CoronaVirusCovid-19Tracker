<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_country_list"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/country_rank_item_country"
            style="@style/TotalFontStyle"
            android:layout_alignTop="@+id/country_name_item_country"
            android:textColor="@color/text_color_dark"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/country_name_item_country"
            android:layout_toEndOf="@+id/country_rank_item_country"
            android:layout_toStartOf="@+id/total_case_item_country"
            style="@style/LabelFontStyle"
            android:textSize="20sp"
            android:textColor="@color/text_color_dark"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/total_case_item_country"
            style="@style/TotalFontStyle"
            android:layout_alignParentEnd="true"
            android:textColor="@color/yellow"
            android:layout_marginStart="12dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:layout_below="@+id/country_name_item_country"
        android:background="@color/viewColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>